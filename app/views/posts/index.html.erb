<div class="main">
  <% @post.each do |post| %>
    <h2><%= link_to post.title, post, class: "title", class: "index_title" %></h2>
    <h6 style="color: red">Published  <%=  time_ago_in_words(post.created_at)  %> ago</h6>
    <b><p style="color: black">By <%=  post.user.email  %> </p></b>
    <%= link_to "Edit", edit_post_path(post),class: "button"  %>
    <%= link_to "Delete", post_path(post), method: :delete, data: { confirm:"Are You Sure?"},class: "button"  %>
    <hr width="95%">
  <% end %>
</div>